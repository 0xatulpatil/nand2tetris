/**
 * Adds two 16-bit values.
 * The most significant carry bit is ignored.
 */

CHIP Or8 {
    IN a[4], b[4];
    OUT out[4];

    PARTS:
   // Put you code here:
	Or(a = a[0], b = b[0], out = out[0]);
	Or(a = a[1], b = b[1], out = out[1]);
	Or(a = a[2], b = b[2], out = out[2]);
	Or(a = a[3], b = b[3], out = out[3]);
}

